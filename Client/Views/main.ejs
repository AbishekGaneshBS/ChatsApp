<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatsApp</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="./Styles/dashboardstyle.css">
</head>
<body>
    <div class="whatsapp-container">
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="user-avatar">
                    <% if (user.displayName) { %>
                        <%= user.displayName.charAt(0).toUpperCase() %>
                    <% } else { %>
                        <i class="fas fa-user"></i>
                    <% } %>
                </div>
                <div>
                    <h3><%= user.displayName %> (<%= user.userName %>)</h3>
                </div>
                <button class="logout-button" onclick="window.location.href='/logout'">Logout</button>
            </div>
            <div class="chat-list">
                <% contacts.forEach(contact => { %>
                    <div class="chat-item" data-type="user" data-user-id="<%= contact.userId %>">
                        <div class="chat-avatar"><%= contact.displayName.charAt(0).toUpperCase() %></div>
                        <div class="chat-info">
                            <h3><%= contact.displayName %><span class="status-indicator"></span></h3>
                            <p>@<%= contact.userName %></p>
                            <p>Online</p>
                        </div>
                    </div>
                <% }); %>
                <% groups.forEach(group => { %>
                    <div class="chat-item" data-type="group" data-group-id="<%= group.groupId %>">
                        <div class="chat-avatar"><i class="fas fa-users"></i></div>
                        <div>
                            <h3><%= group.groupName %></h3>
                            <p data-id="<%= group.groupId %>" data-type="group"></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        
        <div class="chat-area">
            <div id="noChatSelected">
                <i class="far fa-comment-dots"></i>
                <h2>ChatsApp</h2>
                <p>Select a chat to start messaging</p>
            </div>

            <div id="activeChat">
                <div class="chat-header">
                    <div class="chat-avatar" id="chatAvatar"></div>
                    <div id="chatInfo">
                        <h3 id="chatName"></h3>
                        <p id="chatStatus"></p>
                    </div>
                </div>
                <div class="messages-container" id="messagesContainer"></div>
                <div class="message-input">
                    <input type="text" id="messageInput" placeholder="Type a message...">
                    <button id="sendButton"><i class="fas fa-paper-plane"></i></button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentChatId = null;
        let currentChatType = null;
        let userMessageStream = null;
        let groupMessageStream = null;

        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.chat-item').forEach(item => {
                item.addEventListener('click', () => {
                    const type = item.dataset.type;
                    const id = type === 'user' ? item.dataset.userId : item.dataset.groupId;
                    loadChat(type, id, item);
                });
            });

            userMessageStream = new EventSource('/api/messages/user/stream');
            userMessageStream.onmessage = (e) => handleMessage(JSON.parse(e.data), 'user');

            groupMessageStream = new EventSource('/api/messages/group/stream');
            groupMessageStream.onmessage = (e) => handleMessage(JSON.parse(e.data), 'group');

            document.getElementById('sendButton').addEventListener('click', sendMessage);
            document.getElementById('messageInput').addEventListener('keypress', e => {
                if (e.key === 'Enter') sendMessage();
            });
        });

        function handleMessage(message, type) {
            const id = type === 'user' ? message.senderId : message.groupId;
            updateLastMessagePreview(id, type, message.message);
            if (currentChatType === type && currentChatId == id) {
                addMessageToUI(message, false);
            }
        }

        async function loadChat(type, id, element) {
            currentChatType = type;
            currentChatId = id;
            document.getElementById('noChatSelected').style.display = 'none';
            document.getElementById('activeChat').style.display = 'block';
            
            const name = element.querySelector('h3').textContent.split('\n')[0].trim();
            document.getElementById('chatName').textContent = name;
            document.getElementById('chatAvatar').textContent = type === 'user' 
                ? name.charAt(0).toUpperCase() 
                : '<i class="fas fa-users"></i>';

            try {
                const response = await fetch(`/api/messages/${type}/${id}`);
                const data = await response.json();
                document.getElementById('messagesContainer').innerHTML = '';
                data.messages.forEach(msg => addMessageToUI(msg, false));
                document.getElementById('messagesContainer').scrollTop = document.getElementById('messagesContainer').scrollHeight;
                document.getElementById('messageInput').focus();
            } catch(error) {
                console.error('Failed to load messages:', error);
            }
        }

        async function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            if (!message) return;

            const endpoint = `/api/messages/${currentChatType}/send`;
            const body = currentChatType === 'user' 
                ? { recipientId: currentChatId, message } 
                : { groupId: currentChatId, message };

            try {
                await fetch(endpoint, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(body)
                });
                input.value = '';
            } catch(error) {
                console.error('Failed to send message:', error);
            }
        }

        function addMessageToUI(msg, isMe) {
            const container = document.getElementById('messagesContainer');
            const div = document.createElement('div');
            div.className = `message ${isMe ? 'sent' : 'received'}`;
            div.innerHTML = `
                <div class="message-content">
                    ${!isMe && currentChatType === 'group' ? `<div>${msg.senderName}</div>` : ''}
                    <div>${msg.message}</div>
                    <div>${new Date(msg.timestamp).toLocaleTimeString()}</div>
                </div>
            `;
            container.appendChild(div);
            container.scrollTop = container.scrollHeight;
        }

        function updateLastMessagePreview(id, type, message) {
            const element = document.querySelector(`[data-${type}-id="${id}"] p`);
            if (element) element.textContent = message.substring(0, 30);
        }

        window.addEventListener('beforeunload', () => {
            userMessageStream.close();
            groupMessageStream.close();
        });
    </script>
</body>
</html>